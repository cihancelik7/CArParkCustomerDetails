<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B48AED"
    android:padding="16dp"
    android:weightSum="1"
    tools:context="com.cihancelik.CarParkDetails.HR.hrEmpAssigments.HrEmpAssigmentsViewActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/corner_radius"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hrEmpAssigmentsIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Assigment Id:"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/hrEmpAssigmentsEmpIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Employee Id: " />

        <TextView
            android:id="@+id/hrEmpAssigmentsPositionIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Position Id:" />

        <TextView
            android:id="@+id/hrEmpAssigmentsStartDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="start Date: " />

        <TextView
            android:id="@+id/hrEmpAssigmentsEndDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="End Date:" />

        <TextView
            android:id="@+id/hrEmpAssigmentsUpdateDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Update Date :" />

        <TextView
            android:id="@+id/hrEmpAssigmentsCreationDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Creation Date:" />
    </LinearLayout>

    <Button
        android:id="@+id/hrEmpAssigmentsDeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        android:text="Delete"
        android:textColor="#6200EA" />


</LinearLayout>